img(src="/assets/images/footer.png", width="100%", height="auto")
.footer-container
  .container
    .row
      .col-sm-6
        img.img-responsive.center-block(src="/assets/images/logo.svg")
      .col-sm-6
        dl.dl-horizontal
          dt Version
          dd v{{cms.version}}
          dt Runtime
          dd {{cms.runtime.title}} {{cms.runtime.version}}
          dt License
          dd {{cms.license}}
          dt Environment
          dd {{cms.config.environment}}
          dt Port
          dd {{cms.config.port}}
